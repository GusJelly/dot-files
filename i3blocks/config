# Guess the weather hourly
[weather]
command=curl -Ss 'https://wttr.in?0&T&Q' | cut -c 16- | head -2 | xargs echo
interval=3600
color=#A4C2F4

# Print cpu usage
[cpu]
command=cpu.sh
interval=5

# Print ram usage
[ram]
command=ram.sh
interval=5

# Print disk usage
[disk]
command=disk.sh
interval=5

# Update time every 5 seconds
[time]
command=date +"%a %d-%m-%Y %X"
interval=5
