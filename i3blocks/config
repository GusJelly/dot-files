# Global properties
separator=true
separator_block_width=15

[kbdd_layout]
command=kbdd_layout
interval=persist

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1

[greetings]
color=#f5af19
command=echo "Hello, $USER!"
interval=once

