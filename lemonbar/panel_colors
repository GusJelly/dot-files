        COLOR_FOCUSED_OCCUPIED_BG=#ffffff
        COLOR_URGENT_FG=#ff8059
        COLOR_URGENT_BG=#000000
        COLOR_FOCUSED_URGENT_FG=#000000
        COLOR_FOCUSED_URGENT_BG=#ff8059
        COLOR_STATE_FG=#44bc44
        COLOR_STATE_BG=#000000
        COLOR_TITLE_FG=#ffffff
        COLOR_TITLE_BG=#000000
        COLOR_SYS_FG=#ffffff
        COLOR_SYS_BG=#000000
        ;;
    *)
