        COLOR_FOCUSED_URGENT_FG=#ffffff
        COLOR_FOCUSED_URGENT_BG=#a60000
        COLOR_STATE_FG=#005e00
        COLOR_STATE_BG=#ffffff
        COLOR_TITLE_FG=#000000
